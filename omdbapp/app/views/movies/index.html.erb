
<div class="container">
  <div class="col-lg-12 mt-5">
    <% if flash[:alert] %>
      <div class="alert alert-warning"><%= flash[:alert] %></div>
    <% end %>
    <div class="mx-auto mt-5" style="width: 400px">
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 mt-5">
      <div class="mx-auto mt-5" style="width: 400px">

        <%= form_with(url: search_path, method: 'get', local: true) do %>

          <div class="form-group">
            <%= label_tag :movie, 'Busqueda de una pelicula '%>
            <%= text_field_tag :movie, "", placeholder: 'Ej. Blade', class: 'form-control', required: true %>
          </div>

          <%= button_tag 'Search', class: 'btn btn-success btn-block' %>

        <% end %>
      </div>
    </div>
  </div>
  <h4>Busqueda Recientes </h4>
  <table class="table">
    <thead>
    <tr>
      <th scope="col">Link</th>
      <th scope="col">Title</th>
      <th scope="col">Year</th>
      <th scope="col">Director</th>
    </tr>
    </thead>
    <tbody>
       <%= render @movies %>
    </tbody>
  </table>
</div>